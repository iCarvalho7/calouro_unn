<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="message"
            type="br.com.isaias.calourouninorte.data.model.Message" />
    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/item_recive_bg"
        app:cardCornerRadius="10dp"
        android:elevation="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/item_recive_cl"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:background="#EFEFEF">

            <TextView
                android:id="@+id/item_recive_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{message.content}"
                android:textAlignment="textStart"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="akhdhlajdbabdhajbdbkjashdbajs\n uqegqyeuqwgeuqgweu" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</layout>